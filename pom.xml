			<fork>true</fork>
			<optimize>true</optimize>
			<showDeprecation>true</showDeprecation>
			<encoding>UTF-8</encoding>
			<source>1.8</source>
			<target>1.8</target>
		</configuration>
	</plugin>	     
      <plugin>
